{
    "name": "@kapeta/app-desktop-builder",
    "description": "Put your software development into overdrive",
    "productName": "Kapeta Dev",
    "version": "0.31.3",
    "private": true,
    "homepage": "https://kapeta.com",
    "license": "MIT",
    "author": {
        "url": "https://kapeta.com",
        "email": "info@kapeta.com",
        "name": "Kapeta Inc."
    },
    "main": "./src/main/main.ts",
    "scripts": {
        "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
        "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.prod.ts && cp -rf src/service release/app/dist/service",
        "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
        "postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && npm run dev:dll",
        "lint": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx",
        "package": "ts-node ./.erb/scripts/clean.js dist && npm run build && electron-builder build --publish never",
        "prepare": "husky install",
        "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
        "dev:dll": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
        "start": "cross-env PORT=8080 ts-node ./.erb/scripts/check-port-in-use.js && cross-env PORT=8080 npm run start:renderer",
        "start:main": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only .",
        "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.preload.dev.ts",
        "start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts",
        "test": "jest",
        "format": "prettier --write .",
        "storybook": "start-storybook -s assets",
        "build-storybook": "build-storybook"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "cross-env NODE_ENV=development eslint --cache"
        ],
        "*.json,.{eslintrc,prettierrc}": [
            "prettier --ignore-path .eslintignore --parser json --write"
        ],
        "*.{css,scss}": [
            "prettier --ignore-path .eslintignore --single-quote --write"
        ],
        "*.{html,md,yml}": [
            "prettier --ignore-path .eslintignore --single-quote --write"
        ]
    },
    "prettier": "@kapeta/prettier-config",
    "jest": {
        "moduleDirectories": [
            "node_modules",
            "release/app/node_modules",
            "src"
        ],
        "moduleFileExtensions": [
            "js",
            "jsx",
            "ts",
            "tsx",
            "json"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.erb/mocks/fileMock.js",
            "\\.(css|less|sass|scss)$": "identity-obj-proxy"
        },
        "setupFiles": [
            "./.erb/scripts/check-build-exists.ts"
        ],
        "testEnvironment": "jsdom",
        "testEnvironmentOptions": {
            "url": "http://localhost/"
        },
        "testPathIgnorePatterns": [
            "release/app/dist",
            ".erb/"
        ],
        "transform": {
            "\\.(ts|tsx|js|jsx)$": "ts-jest"
        }
    },
    "dependencies": {
        "@kapeta/local-cluster-config": "<2",
        "@kapeta/local-cluster-service": "<2",
        "@kapeta/web-microfrontend": "<2",
        "electron-debug": "^3.2.0",
        "electron-log": "^4.4.8",
        "electron-updater": "^5.3.0",
        "execa": "^7.2.0",
        "fix-path": "^4.0.0",
        "gunzip-maybe": "^1.4.2",
        "which": "^3.0.0",
        "xterm": "^5.2.1"
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@electron/notarize": "^1.2.3",
        "@electron/rebuild": "^3.2.10",
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "@kapeta/nodejs-api-client": "<2",
        "@kapeta/nodejs-process": "<2",
        "@kapeta/prettier-config": "^0.6.1",
        "@kapeta/schemas": "<2",
        "@kapeta/style": "^0.90.0",
        "@kapeta/ui-web-components": "<2",
        "@kapeta/ui-web-context": "<2",
        "@kapeta/ui-web-plan-editor": "<2",
        "@kapeta/ui-web-types": "<2",
        "@kapeta/ui-web-utils": "<2",
        "@mui/icons-material": "^5.14.0",
        "@mui/material": "^5.13.6",
        "@mui/system": "^5.14.0",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
        "@storybook/addon-actions": "^6.5.12",
        "@storybook/addon-links": "^6.5.12",
        "@storybook/addons": "^6.5.12",
        "@storybook/builder-webpack5": "^6.5.12",
        "@storybook/manager-webpack5": "^6.5.12",
        "@storybook/react": "^6.5.12",
        "@svgr/webpack": "^6.3.1",
        "@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.3.0",
        "@types/jest": "^28.1.7",
        "@types/node": "18.7.6",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "@types/react-test-renderer": "^18.0.0",
        "@types/request": "^2.48.8",
        "@types/terser-webpack-plugin": "^5.0.4",
        "@types/webpack-bundle-analyzer": "^4.4.2",
        "@typescript-eslint/eslint-plugin": "^5.33.1",
        "@typescript-eslint/parser": "^5.33.1",
        "browserslist-config-erb": "^0.0.3",
        "chalk": "^4.1.2",
        "chromatic": "^6.19.9",
        "concurrently": "^7.3.0",
        "core-js": "^3.24.1",
        "cross-env": "^7.0.3",
        "css-loader": "^6.7.1",
        "css-minimizer-webpack-plugin": "^4.0.0",
        "detect-port": "^1.3.0",
        "electron": "^24.2.0",
        "electron-builder": "^23.6.0",
        "electron-devtools-installer": "^3.2.0",
        "electronmon": "^2.0.2",
        "eslint": "^8.22.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-erb": "^4.0.6",
        "eslint-import-resolver-typescript": "^3.4.1",
        "eslint-import-resolver-webpack": "^0.13.2",
        "eslint-plugin-compat": "^4.0.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.8.3",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "file-loader": "^6.2.0",
        "guid-typescript": "*",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^8.0.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^28.1.3",
        "jest-environment-jsdom": "^28.1.3",
        "less": "^4.1.3",
        "less-loader": "^11.0.0",
        "lint-staged": "^13.0.3",
        "mini-css-extract-plugin": "^2.6.1",
        "mobx": ">=6",
        "mobx-react": ">=7",
        "path-browserify": "^1.0.1",
        "prettier": "^2.8.4",
        "react": ">=18",
        "react-dom": ">=18",
        "react-error-boundary": "^3.1.4",
        "react-refresh": "^0.14.0",
        "react-router-dom": "^6.6.2",
        "react-tabs": "^6.0.0",
        "react-test-renderer": "^18.2.0",
        "react-toastify": "^9.1.1",
        "react-use": "^17.4.0",
        "rimraf": "^3.0.2",
        "sass": "^1.54.4",
        "sass-loader": "^13.0.2",
        "storybook": "^6.5.12",
        "style-loader": "^3.3.1",
        "swr": "^2.2.0",
        "terser-webpack-plugin": "^5.3.5",
        "ts-jest": "^28.0.8",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths-webpack-plugin": "^4.0.0",
        "typescript": "^4.7.4",
        "url-loader": "^4.1.1",
        "webpack": "^5.74.0",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.10.0",
        "webpack-merge": "^5.8.0"
    },
    "build": {
        "productName": "Kapeta",
        "appId": "com.kapeta.Kapeta",
        "asar": true,
        "asarUnpack": "**\\*.{node,dll}",
        "files": [
            "dist",
            "node_modules",
            "package.json"
        ],
        "afterSign": ".erb/scripts/notarize.js",
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": [
                {
                    "target": "default",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                }
            ],
            "type": "distribution",
            "hardenedRuntime": true,
            "entitlements": "assets/entitlements.mac.plist",
            "entitlementsInherit": "assets/entitlements.mac.plist",
            "gatekeeperAssess": false
        },
        "dmg": {
            "backgroundColor": "#eeeeee",
            "iconSize": 80,
            "window": {
                "x": 500,
                "y": 500,
                "width": 500,
                "height": 200
            },
            "contents": [
                {
                    "x": 150,
                    "y": 80
                },
                {
                    "x": 350,
                    "y": 80,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "win": {
            "target": [
                "nsis"
            ],
            "signingHashAlgorithms": [
                "sha256"
            ]
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "category": "Development",
            "maintainer": "support@kapeta.com"
        },
        "appImage": {
            "desktop": "assets/linux.desktopfile"
        },
        "directories": {
            "app": "release/app",
            "buildResources": "assets",
            "output": "release/build"
        },
        "extraResources": [
            "./assets/**"
        ],
        "publish": [
            {
                "provider": "github",
                "owner": "kapetacom",
                "repo": "kapeta-desktop",
                "releaseType": "release"
            },
            {
                "provider": "github",
                "owner": "kapetacom",
                "repo": "app-desktop-builder",
                "releaseType": "release"
            }
        ],
        "protocols": [
            {
                "name": "kapeta",
                "schemes": [
                    "kapeta"
                ]
            }
        ]
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/changelog",
                {
                    "changelogFile": "CHANGELOG.md"
                }
            ],
            "@semantic-release/npm",
            [
                "@semantic-release/npm",
                {
                    "pkgRoot": "./release/app/"
                }
            ],
            "@semantic-release/github",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md",
                        "package.json",
                        "package-lock.json",
                        "release/app/package.json",
                        "release/app/package-lock.json"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    },
    "devEngines": {
        "node": ">=14.x",
        "npm": ">=7.x"
    },
    "electronmon": {
        "patterns": [
            "!**/**",
            "src/main/**"
        ],
        "logLevel": "quiet"
    }
}
